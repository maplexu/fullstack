/**index.wxss**/
/* 头部样式 */
.header{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  background: #fff;
  width: 100%;
}
.header_holder{
  height: 36px;
}
.header .container{
  white-space: nowrap;
  position: relative;
}
.header .container view{
  width: 120rpx;
  text-align: center;
  font-size: 30rpx;
  display: inline-block;
}
.header .container view.active{
  font-weight: bold;
}
.header .container .cur{
  width: 64rpx;
  height: 6rpx;
  background: #f8ca43;
  position: absolute;
  left: 0;
  bottom: 0;
  margin-left: 28rpx;
  transition: 0.2s all ease;
}

/* 内容列表样式 */
.video_item{
  position: relative;  
}
.video_item .cover{
  width: 750rpx;
  height: 422rpx;
}
.video_item .title{
  font-size: 35rpx;
  color: #FFF;
  position: absolute;
  left: 30rpx;
  top: 25rpx;
}
.video_item .detail{
  height: 100rpx;
  background: #fff;
}
.video_item .detail button{
  /* 清除按钮的默认样式 */
  border: none;
  background: none;
  outline: none;
  padding: 0;
  /*  */
  font-size: 28rpx;
  margin-right: 49rpx;
}
.video_item .detail button image{
  width: 28rpx;
  height: 28rpx;
}

/* 底部样式 */
.footer{
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
}